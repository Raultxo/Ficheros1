<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:padding="20sp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contenido a escribir:">
    </TextView>
    <EditText
        android:id="@+id/txtAEscribir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </EditText>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <Button
            android:id="@+id/btnAniadirFichInterno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Añadir fich int"
            android:textSize="9sp"
            android:layout_marginHorizontal="5sp"
            android:onClick="escribirInterno">
        </Button>
        <Button
            android:id="@+id/btnAniadirFichExterno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Añadir fich ext"
            android:textSize="9sp"
            android:layout_marginHorizontal="5sp"
            android:onClick="escribirExterno">
        </Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <Button
            android:id="@+id/btnLeerFichInterno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Leer fich int"
            android:textSize="9sp"
            android:layout_marginHorizontal="5sp"
            android:onClick="leerInterno">
        </Button>
        <Button
            android:id="@+id/btnLeerFichExterno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Leer fich ext"
            android:textSize="9sp"
            android:layout_marginHorizontal="5sp"
            android:onClick="leerExterno">
        </Button>
        <Button
            android:id="@+id/btnLeerRecurso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Leer recurso"
            android:textSize="9sp"
            android:layout_marginHorizontal="5sp"
            android:onClick="leerRecurso">
        </Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <Button
            android:id="@+id/btnBorrarFichInterno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Borrar fichero interno"
            android:textSize="9sp"
            android:layout_marginHorizontal="5sp"
            android:onClick="borrarInterno">
        </Button>
        <Button
            android:id="@+id/btnBorrarFichExterno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Borrar fichero externo"
            android:textSize="9sp"
            android:layout_marginHorizontal="5sp"
            android:onClick="borrarExterno">
        </Button>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="El contenido del fichero es:">
    </TextView>
    <TextView
        android:id="@+id/contenidoFichero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>
</LinearLayout>